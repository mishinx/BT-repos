@model ValorVault.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/profilesettings/profsetstyle.css" />
    <link rel="stylesheet" href="~/css/profilesettings/global.css" />
</head>
<body>
    <div class="component">
        <button class="overlap1" onclick="goBack()"><img class="union2" src="~/images/union2.svg" /></button>
        <div class="overlap">
            <img class="avtor" src="images/avtor-8.png" width="200" height="200" />
        </div>
        <div class="div">
            <div class="text-wrapper">Ім‘я</div>
            <div class="text-wrapper-2">Електронна пошта</div>
            <div class="overlap-2">
                <input type="text" id="emailField" value="@Model.email" />
            </div>
            <div class="text-wrapper-4">Пароль</div>
            <div class="overlap-3">
                <input type="password" id="newPasswordField" placeholder="Enter new password" />
            </div>
            <div class="text-wrapper-6">Кількість створених анкет: 0</div>
            <div class="text-wrapper-7">Кількість опублікованих анкет: 0</div>
            <div class="text-wrapper-8">Кількість відхилених анкет: 0</div>
            <div class="overlap-4">
                <input type="text" id="usernameField" value="@Model.username" />
            </div>
            <button class="saveChanges" onclick="saveChanges('@Model.UserId')">Підтвердити</button>
            <div id="message"></div> <!-- Виведення повідомлення про успіх або помилку -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function goBack() {
            window.history.back();
        }

        function saveChanges(userId) {
            var newPassword = $("#newPasswordField").val(); // Отримання нового паролю

            $.ajax({
                url: '/ProfileView/UpdatePassword', // URL вашого контролера
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ userId: userId, newPassword: newPassword }),
                success: function (response) {
                    $("#message").html(response.message); // Відображення повідомлення про успіх
                },
                error: function (xhr, status, error) {
                    $("#message").html("Failed to update password"); // Відображення повідомлення про помилку
                }
            });
        }
    </script>
</body>
</html>
